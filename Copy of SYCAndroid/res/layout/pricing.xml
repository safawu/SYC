<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/priceDialog"
    android:layout_width="450dp"
    android:layout_height="280dp"
    android:background="@drawable/dialog"
    android:baselineAligned="false">

    <include
        android:id="@+id/pricingItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:layout_toRightOf="@+id/minus"
        layout="@layout/block_button" />

    <Button
        android:id="@+id/plus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/pricingItem"
        android:layout_marginLeft="8dp"
        android:background="@drawable/plus" />

    <Button
        android:id="@+id/minus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/originalPrice"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/minus" />



    <TextView
        android:id="@+id/originalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:layout_marginLeft="84dp"
        android:text="$120"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/PricingOK"
        android:layout_marginLeft="67dp"
        android:text="Purchase Price"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/PricingOK"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_below="@+id/pricingItem"
        android:layout_gravity="bottom"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/TextView1"
        android:background="@drawable/redbtn"
        android:text="OK"
        android:textColor="@color/btntextcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>